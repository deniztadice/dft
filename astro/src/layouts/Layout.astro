---
import Navbar from "../components/Navbar.astro";
import i18next, { t } from "i18next";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={t("site.title")} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.webp" />
    <title>{title}</title>
  </head>

  <body class="bg-blue-300">
    <Navbar />
    <slot />
    <footer class="container mx-auto flex flex-col items-center">
      <a href="https://github.com/deniztadice/dft"><img class="w-14" src="./images/github-mark/github-mark.svg" alt="Github"></a>
    </footer>
    
  </body>
</html>
