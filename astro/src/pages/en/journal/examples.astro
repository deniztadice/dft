            `
        lang="html"
      />
      <Example
        title="ITEM"
        style="w-1/2 mx-auto"
        code=`
<section class="pf2e item">
    <header class="item-img">
        <h4 class="title">ITEM</h4>
        <span class="type">Type</span>
    </header>
    <p>TEXT</p>
</section>
            `
        lang="html"
      />
      <Example
        title="FVTT"
        style="w-1/2 mx-auto"
        code=`
